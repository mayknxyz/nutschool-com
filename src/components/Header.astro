---
import HeaderLink from './HeaderLink.astro';
---

<header class="fixed w-full bg-[#CEF3F5] z-50 border-b border-gray-100">
	<div class="container mx-auto px-4">
		<div class="flex items-center justify-between h-16">
			<!-- Logo -->
			<div class="flex-shrink-0">
				<a href="/" class="flex items-center">
					<img src="/images/logo-nutschool.png" alt="NutSchool Logo" class="h-8 w-auto" />
				</a>
			</div>
			
			<!-- Navigation -->
			<nav class="flex-1 hidden md:flex justify-center">
				<ul class="flex space-x-8">
					<li><HeaderLink href="/" class="text-gray-700 hover:text-gray-900">Home</HeaderLink></li>
					<li><HeaderLink href="/about" class="text-gray-700 hover:text-gray-900">About</HeaderLink></li>
					<li><HeaderLink href="/blog" class="text-gray-700 hover:text-gray-900">Blog</HeaderLink></li>
				</ul>
			</nav>

			<!-- Mobile menu button -->
			<div class="md:hidden">
				<button type="button" class="mobile-menu-button text-gray-700 hover:text-gray-900 p-2 -mr-2" aria-label="Toggle menu">
					<svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
						<path class="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
						<path class="close-icon hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
					</svg>
				</button>
			</div>

			<!-- Right section (for balance) - only visible on desktop -->
			<div class="flex-shrink-0 w-[68px] hidden md:block"></div>
		</div>

		<!-- Mobile menu -->
		<div class="mobile-menu hidden md:hidden">
			<ul class="pt-2 pb-4 space-y-2">
				<li><HeaderLink href="/" class="block px-4 py-2 text-gray-700 hover:text-gray-900 hover:bg-gray-50">Home</HeaderLink></li>
				<li><HeaderLink href="/about" class="block px-4 py-2 text-gray-700 hover:text-gray-900 hover:bg-gray-50">About</HeaderLink></li>
				<li><HeaderLink href="/blog" class="block px-4 py-2 text-gray-700 hover:text-gray-900 hover:bg-gray-50">Blog</HeaderLink></li>
			</ul>
		</div>
	</div>
</header>

<script>
	// Mobile menu toggle
	const mobileMenuButton = document.querySelector('.mobile-menu-button');
	const mobileMenu = document.querySelector('.mobile-menu');
	const menuIcon = document.querySelector('.menu-icon');
	const closeIcon = document.querySelector('.close-icon');

	if (mobileMenuButton && mobileMenu && menuIcon && closeIcon) {
		mobileMenuButton.addEventListener('click', () => {
			mobileMenu.classList.toggle('hidden');
			menuIcon.classList.toggle('hidden');
			closeIcon.classList.toggle('hidden');
		});
	}
</script>

<style>
	nav :global(a) {
		display: inline-flex;
		padding: 0.5rem 0;
		font-weight: 500;
		text-decoration: none;
		transition: color 0.2s;
	}

	.mobile-menu :global(a) {
		display: block;
		font-weight: 500;
		text-decoration: none;
		transition: all 0.2s;
	}
</style>
